{
  "@context": {
    "id": "@id",
    "type": "@type",
    "bc": "https://raw.githubusercontent.com/fuerve/blockcerts-testing/master/blockcerts_v21/schema#",
    "obi": "https://w3id.org/openbadges#",
    "cp": "https://w3id.org/chainpoint#",
    "schema": "http://schema.org/",
